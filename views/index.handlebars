<container>
    <div class= "row">
    <h2>Veggie burgers to try!</h2>

    <ul id= "lefty">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>DEVOURED!</h2>
    <ul id ="righty">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

    <form class="create-form">
        <div class="form-group">
            <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add a Veggie Burger!</button>
    </form>
</div>
</container>