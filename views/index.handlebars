<container>

    <h2>Veggie burgers to try!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>DEVOURED!</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a veggie burger to try!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger:</label>
            <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
            <label for="devoured">DEVOUR?!</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        </div>

        <button type="submit">Add Veggie Burger!</button>
    </form>

</container>